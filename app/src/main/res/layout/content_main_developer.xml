<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:id="@+id/item11"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:translationY="20dp"
                android:layout_margin="10dp"
                android:layout_marginTop="70dp">


                <ImageView
                    android:id="@+id/coder2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.48"
                    app:srcCompat="@drawable/ankit_square_min" />

                <TextView
                    android:id="@+id/name21"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:text="Ankit Singh"
                    android:textAlignment="center"
                    android:textSize="20sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:translationY="20dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/coder1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.48"
                    app:srcCompat="@drawable/divyansh_square_min" />

                <TextView
                    android:id="@+id/name22"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:text="Divyansh Sharma"
                    android:textSize="20sp"
                    android:textAlignment="center"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:translationY="20dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.48"
                    app:srcCompat="@drawable/mahit_square_min" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:text="Shree Mahit"
                    android:textSize="20sp"
                    android:textAlignment="center"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:translationY="20dp"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.48"
                    app:srcCompat="@drawable/raj_dp_min" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:text="Raj Agarwal"
                    android:textSize="20sp"
                    android:textAlignment="center"/>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>

